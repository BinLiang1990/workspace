package cn.vobile.opm.dbsync.entrance;

import org.springframework.context.support.ClassPathXmlApplicationContext;

import cn.vobile.opm.dbsync.service.UsersRepository;

public class SyncUsersStart {

	public static void main(String[] args) {
		ClassPathXmlApplicationContext applicationContext = new ClassPathXmlApplicationContext(
				"applicationContext.xml");
		UsersRepository usersRepository = applicationContext.getBean(
				"usersRepository", UsersRepository.class);
		Thread thread = new Thread(usersRepository);
		thread.start();
	}
}
