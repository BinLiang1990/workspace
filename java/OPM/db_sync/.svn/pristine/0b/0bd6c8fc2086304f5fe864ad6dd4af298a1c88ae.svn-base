package cn.vobile.opm.dbsync.dao;

import java.util.List;

import javax.annotation.Resource;

import org.springframework.jdbc.core.JdbcTemplate;
import org.springframework.stereotype.Repository;

@Repository
public class OpmUserDAO {

	@Resource
	private JdbcTemplate jdbcTemplate;
	private static final String UPDATESQL = "UPDATE opmuser SET userid = ?, "
			+ "passwd = ?, is_enabled = ?, "
			+ "usergroup = ?, username = ?, phone = ?, note = ? where id = ?";
	private static final String INSERTSQL = "INSERT INTO opmuser(id, userid, "
			+ "passwd, is_enabled, usergroup, username, phone, note) "
			+ "VALUES(?, ?, ?, ?, ?, ?, ?, ?)";
	private static final String COUNTUSER = "SELECT COUNT(id) FROM opmuser";
	private static final String SELECTID = "SELECT id FROM opmuser";

	public void updateOpmuser(int id, String userid, String passwd,
			int is_enabled, String usergroup, String username, String phone,
			String note) {
		Object[] params = new Object[] { userid, passwd, is_enabled, usergroup,
				username, phone, note, id };
		jdbcTemplate.update(UPDATESQL, params);
	}

	public void insertOpmuser(int id, String userid, String passwd,
			int is_enabled, String usergroup, String username, String phone,
			String note) {
		Object[] params = new Object[] { id, userid, passwd, is_enabled,
				usergroup, username, phone, note };
		jdbcTemplate.update(INSERTSQL, params);
	}

	public List<Integer> selectAllUsersId() {
		return jdbcTemplate.queryForList(SELECTID, Integer.class);
	}

	public int selectCountUser() {
		return jdbcTemplate.queryForObject(COUNTUSER, null, Integer.class);
	}
}
